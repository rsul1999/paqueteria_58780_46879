<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="552.0" spacing="20" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.paqueteria.Vista4Controller">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Cotización de Envíos" />
    <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Paso 4" />
    <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" text="Confirmación" />

    <Label maxWidth="500" style="-fx-text-fill: white;" text="Gracias por completar la cotización. Aquí está el resumen de tu envío:" wrapText="true" />

    <VBox maxWidth="500" spacing="10" style="-fx-background-color: #2d2d2d; -fx-background-radius: 5;">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label fx:id="servicioLabel" style="-fx-text-fill: white;" text="Servicio seleccionado: " />
        <Label fx:id="remitenteLabel" style="-fx-text-fill: white;" text="Remitente: " />
        <Label fx:id="destinatarioLabel" style="-fx-text-fill: white;" text="Destinatario: " />
        <Label fx:id="telefonoDestinatarioLabel" style="-fx-text-fill: white;" text="Teléfono destinatario: " />
        <Label fx:id="direccionLabel" style="-fx-text-fill: white;" text="Dirección del destinatario: " />
    </VBox>

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#atrasPaso4" text="Atrás" style="-fx-background-color: #555555; -fx-text-fill: white;" />
        <Button onAction="#nuevaCotizacion" text="Hacer otra cotización" style="-fx-background-color: #0096c9; -fx-text-fill: white;" />
    </HBox>
</VBox>
