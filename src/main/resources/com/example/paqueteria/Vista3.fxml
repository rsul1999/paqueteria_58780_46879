<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.paqueteria.Vista3Controller">
    <VBox alignment="TOP_CENTER" prefHeight="1018.0" prefWidth="579.0" spacing="20" style="-fx-background-color: #1e1e1e;">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label style="-fx-text-fill: #0096c9; -fx-font-weight: bold; -fx-font-size: 24;" text="Cotización de Envíos" />
        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18;" text="Paso 3" />
        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" text="Detalles del envío" />

        <VBox maxWidth="500" spacing="10" style="-fx-background-color: #2d2d2d; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-text-fill: #0096c9; -fx-font-weight: bold; -fx-font-size: 14;" text="Remitente" />

            <Label text="Nombre" style="-fx-text-fill: white;" />
            <TextField fx:id="nombreRemitenteField" />

            <Label text="Ciudad" style="-fx-text-fill: white;" />
            <TextField fx:id="ciudadRemitenteField" />

            <Label text="Calle y número" style="-fx-text-fill: white;" />
            <TextField fx:id="calleRemitenteField" />

            <Label text="Colonia" style="-fx-text-fill: white;" />
            <TextField fx:id="coloniaRemitenteField" />

            <Label text="Teléfono" style="-fx-text-fill: white;" />
            <TextField fx:id="telefonoRemitenteField" />
        </VBox>

        <VBox maxWidth="500" spacing="10" style="-fx-background-color: #2d2d2d; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-text-fill: #0096c9; -fx-font-weight: bold; -fx-font-size: 14;" text="Destinatario" />

            <Label text="Nombre" style="-fx-text-fill: white;" />
            <TextField fx:id="nombreDestinatarioField" />

            <Label text="Ciudad" style="-fx-text-fill: white;" />
            <TextField fx:id="ciudadDestinatarioField" />

            <Label text="Calle y número" style="-fx-text-fill: white;" />
            <TextField fx:id="calleDestinatarioField" />

            <Label text="Colonia" style="-fx-text-fill: white;" />
            <TextField fx:id="coloniaDestinatarioField" />

            <Label text="Referencia" style="-fx-text-fill: white;" />
            <TextField fx:id="referenciaField" />

            <Label text="Teléfono" style="-fx-text-fill: white;" />
            <TextField fx:id="telefonoDestinatarioField" />
        </VBox>

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#atrasPaso3" text="Atrás" style="-fx-background-color: #555555; -fx-text-fill: white;" />
            <Button onAction="#siguientePaso3" text="Siguiente" style="-fx-background-color: #0096c9; -fx-text-fill: white;" />
        </HBox>
    </VBox>
</ScrollPane>
